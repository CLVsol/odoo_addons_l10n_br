<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_clv_orizon_form_abcfarma" model="ir.ui.view">
            <field name="name">clv_orizon.form</field>
            <field name="model">clv_orizon</field>
            <field name="inherit_id" ref="l10n_br_clv_orizon.view_clv_orizon_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <field name="from" position="before">
                    <field name="med_abc"/>
                    <field name="abcfarma_id"/>
                </field>
            </field>
        </record>
        
        <record id="view_clv_orizon_search_active_abcfarma" model="ir.ui.view">
            <field name="name">clv_orizon.search</field>
            <field name="model">clv_orizon</field>
            <field name="inherit_id" ref="view_clv_orizon_search"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="principio_ativo" position="after">
                    <field name="med_abc"/>
                    <field name="abcfarma_id"/>
                </field>
                <filter string="Active Medicaments" position="after">
                    <filter string="Missing ABCFarma" name="missing_abcfarma" domain="[('abcfarma_id','=',False)]"/>
                    <filter string="Defined ABCFarma" name="defined_abcfarma" domain="[('abcfarma_id','!=',False)]"/>
                </filter>
            </field>
        </record>

    </data>
</openerp>
