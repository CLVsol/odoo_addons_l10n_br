<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_clv_family_tree_l10n_br">
            <field name="name">clv_family.tree</field>
            <field name="model">clv_family</field>
            <field name="inherit_id" ref="clv_family.view_clv_family_tree"/>
            <field name="arch" type="xml">
                <field name="code" position="after">
                    <field name="cpf"/>
                    <field name="rg"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_clv_family_form_l10n_br">
            <field name="name">clv_family.form</field>
            <field name="model">clv_family</field>
            <field name="inherit_id" ref="clv_family.view_clv_family_form"/>
            <field name="arch" type="xml">
                <field name="identification_id" position="replace">
                    <field name="cpf"/>
                </field>
                <field name="otherid" position="replace">
                    <field name="rg"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_clv_family_search_l10n_br">
            <field name="name">clv_family.filter</field>
            <field name="model">clv_family</field>
            <field name="inherit_id" ref="clv_family.view_clv_family_search"/>
            <field name="arch" type="xml">
                <field name="code" position="after">
                    <field name="cpf"/>
                    <field name="rg"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
