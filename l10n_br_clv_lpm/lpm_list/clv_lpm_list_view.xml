<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_clv_lpm_list_tree" model="ir.ui.view">
            <field name="name">clv_lpm_list.tree</field>
            <field name="model">clv_lpm_list</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="LPM List">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>
        
        <record id="view_clv_lpm_list_form" model="ir.ui.view">
            <field name="name">clv_lpm_list.form</field>
            <field name="model">clv_lpm_list</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="LPM Lists" version="7.0">
                    <sheet string="LPM List">
                        <div class="oe_center" name="center">
                            <!-- Put here related fields -->
                        </div>
                        <!--field name="image_medium" widget='image' class="oe_left oe_avatar"/-->
                        <div class="oe_title">
                            <!--label for="name" class="oe_edit_only"/-->
                            <label for="name"/>
                            <h2>
                                <field name="name" placeholder="Catalog Name..."/>
                            </h2>
                            <!--label for="code" class="oe_edit_only"/-->
                            <label for="code"/>
                            <h2>
                                <field name="code" placeholder="Medicament Name..."/>
                            </h2>
                            <label for="description"/>
                            <h3>
                                <field name="description" placeholder="Order..."/>
                            </h3>
                        </div>
                        <div class="oe_right oe_button_box" name="button_box">
                            <!-- Put here related buttons -->
                        </div>
                        <notebook>
                            <page string="Public Information">
                                <field name="notes" placeholder="Other Information ..." colspan="4"/>
                            </page>
                            <page string="Settings" groups="clv_base.group_base_rmanager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_clv_lpm_list_search" model="ir.ui.view">
            <field name="name">clv_lpm_list.search</field>
            <field name="model">clv_lpm_list</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="LPM List">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="notes"/>
                    <separator/>
                    <group expand="0" string="Group By...">
                    </group>
                </search>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="act_open_clv_lpm_list_view">
            <field name="name">LPM Lists</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">clv_lpm_list</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_clv_lpm_list_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new LPM List.
              </p>
            </field>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_clv_lpm_list_view_form">
            <field name="act_window_id" ref="act_open_clv_lpm_list_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_clv_lpm_list_form"/>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_clv_lpm_list_view_tree">
            <field name="act_window_id" ref="act_open_clv_lpm_list_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_clv_lpm_list_tree"/>
        </record>
        
    </data>
</openerp>
