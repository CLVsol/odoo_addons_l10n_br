<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_clv_lpm_form_orizon" model="ir.ui.view">
            <field name="name">clv_lpm.form</field>
            <field name="model">clv_lpm</field>
            <field name="inherit_id" ref="l10n_br_clv_lpm.view_clv_lpm_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <field name="from" position="before">
                    <field name="orizon_id"/>
                </field>
            </field>
        </record>
        
        <record id="view_clv_lpm_search_active_orizon" model="ir.ui.view">
            <field name="name">clv_lpm.search</field>
            <field name="model">clv_lpm</field>
            <field name="inherit_id" ref="view_clv_lpm_search"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="principio_ativo" position="after">
                    <field name="orizon_id"/>
                </field>
                <filter string="Active Medicaments" position="after">
                    <filter string="Missing Orizon" name="missing_orizon" domain="[('orizon_id','=',False)]"/>
                    <filter string="Defined Orizon" name="defined_orizon" domain="[('orizon_id','!=',False)]"/>
                </filter>
            </field>
        </record>

    </data>
</openerp>
